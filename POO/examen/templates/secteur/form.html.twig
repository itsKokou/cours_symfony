{% extends 'base.html.twig' %}

{% block title %}Secteur|Form{% endblock %}

{% block content %}
    <div class="w-full flex mt-12 rounded-lg px-4 py-3 mt-4 text-gray-500 border bg-gray-300">
        {{form_start(form)}}
            <h4 class ="text-gray-900 mb-4 text-base font-bold">Enregistrement de Secteur</h4>
            <div  class="inline-flex mt-1 mb-4 w-full" >
                <label  class="mb-2  w-10">
                    {{form_label(form.name) }}
                </label>
                <div style="padding-left:10%" class="w-full">{{form_widget(form.name)}}</div>
            </div>
            <div  class="inline-flex mt-1 mb-4 w-full">
                <label class="mb-2  w-10">
                    {{form_label(form.codeUO,"Code") }}
                </label>
                <div style="padding-left:10%" class="w-full">{{form_widget(form.codeUO)}}</div>
            </div>
            <div  class="inline-flex mt-1 mb-4 w-full">
                <label class="mb-2 w-10">
                    {{form_label(form.direction) }}
                </label>
                <div style="padding-left:10%" class="w-full">{{form_widget(form.direction)}}</div>
            </div>
            <div  class="inline-flex mt-1 mb-4 w-full">
                <label class="mb-2 w-10">
                    {{form_label(form.agents) }}
                </label>
                <div style="padding-left:10%" class="w-full">{{form_widget(form.agents)}}</div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block js %}
    <script>
        $(document).ready(function() {
            $('.selectAgents').select2();
        });
    </script>
{% endblock %}
